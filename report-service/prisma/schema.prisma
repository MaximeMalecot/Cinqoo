generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ServiceReport {
  id String  @id @default(uuid())
  userId String
  reportReason ReportReason @relation(fields: [reportReasonId], references: [id])
  reportReasonId String
}

model ReportReason {
  id String  @id @default(uuid())
  name String
  description String
  type ReportType
  serviceReports ServiceReport[]
}

enum ReportType {
  SERVICE
  USER
}